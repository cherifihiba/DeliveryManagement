@model DeliveryManagement.Models.ReceiptViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Delivery Receipt - @Model.ReceiptNumber</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #4a6bff;
            padding-bottom: 20px;
        }

        .logo {
            max-height: 80px;
            margin-bottom: 10px;
        }

        .receipt-title {
            color: #4a6bff;
            margin: 10px 0;
        }

        .details {
            margin: 30px 0;
        }

        .detail-row {
            display: flex;
            margin-bottom: 10px;
        }

        .detail-label {
            font-weight: bold;
            width: 200px;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 0.9em;
            color: #666;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }

        .signature {
            margin-top: 50px;
        }

        .receipt-number {
            text-align: right;
            font-weight: bold;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="receipt-number">Receipt: @Model.ReceiptNumber</div>

    <div class="header">
        @if (!string.IsNullOrEmpty(Model.CompanyLogo))
        {
            <img src="@Model.CompanyLogo" alt="Company Logo" class="logo" />
        }
        <h1 class="receipt-title">@Model.CompanyName</h1>
        <h2>Delivery Receipt</h2>
    </div>

    <div class="details">
        <div class="detail-row">
            <div class="detail-label">Order Number:</div>
            <div>#@Model.OrderId</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Customer Name:</div>
            <div>@Model.CustomerName</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Delivery Address:</div>
            <div>@Model.Address</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Product:</div>
            <div>@Model.Product</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Delivery Date:</div>
            <div>@Model.DeliveryDate.ToString("MMMM dd, yyyy")</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Assigned Driver:</div>
            <div>@Model.DelivererName (@Model.DelivererPhone)</div>
        </div>
    </div>

    <div class="signature">
        <div style="float: left; width: 45%;">
            <p>_________________________</p>
            <p>Customer Signature</p>
        </div>
        <div style="float: right; width: 45%; text-align: right;">
            <p>_________________________</p>
            <p>Driver Signature</p>
        </div>
        <div style="clear: both;"></div>
    </div>

    <div class="footer">
        <p>Receipt printed on @Model.PrintDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
        <p>Thank you for choosing @Model.CompanyName!</p>
    </div>
</body>
</html>