@model DeliveryManagement.Models.Command

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Command</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Command</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product</dd>

        <dt class="col-sm-2">Deliverer</dt>
        <dd class="col-sm-10">@Model.Deliverer?.FullName</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
