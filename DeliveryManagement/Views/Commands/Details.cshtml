@model DeliveryManagement.Models.Command

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Command Details</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Command</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Customer Name</dt>
            <dd class="col-sm-9">@Model.CustomerName</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Product</dt>
            <dd class="col-sm-9">@Model.Product</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Deliverer</dt>
            <dd class="col-sm-9">@Model.Deliverer?.FullName (@Model.Deliverer?.PhoneNumber)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="PrintReceipt" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="fas fa-print mr-2"></i> Print Receipt
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
